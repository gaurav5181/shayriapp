<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Show_Activity">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:id="@+id/expend"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/expand">


        </ImageView>

        <TextView
            android:id="@+id/counter"
            android:layout_width="81dp"
            android:layout_height="52dp"
            android:textStyle="bold"
            android:text="1/3"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp">

        </TextView>

        <ImageView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/reload">

        </ImageView>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1">

        <TextView

            android:id="@+id/showtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="#EA35B5"
            android:text="shyri is here"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp">

        </TextView>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#166C19"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp">

        <ImageView

            android:id="@+id/copyicon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/copy">

        </ImageView>

        <ImageView

            android:id="@+id/priveous"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:src="@drawable/ic_action_previous">

        </ImageView>

        <ImageView

            android:id="@+id/editpencil"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:src="@drawable/pencil2">

        </ImageView>

        <ImageView

            android:id="@+id/next"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:src="@drawable/ic_action_next_item">

        </ImageView>

        <ImageView

            android:id="@+id/sharebtn"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:src="@drawable/ic_action_share">

        </ImageView>


    </LinearLayout>


</RelativeLayout>