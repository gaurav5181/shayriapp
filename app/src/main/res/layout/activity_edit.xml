<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Edit_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linear"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/edit_shyri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/_4sdp"
            android:background="#EA1F1F"
            android:padding="@dimen/_8sdp"
            android:text="hiiiiiiiii"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp">

        </TextView>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#3E303A"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp">


            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/reload">

            </ImageView>

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/expand">

            </ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@color/black"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Background"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/background">

            </TextView>

            <TextView
                android:id="@+id/txtcolour"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@color/black"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="TextColour"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp">

            </TextView>

            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@color/black"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fontbtn"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@color/black"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Font"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp">

            </TextView>

            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@color/black"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Emoji"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp">

            </TextView>

            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@color/black"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Text Size"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp">

            </TextView>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>